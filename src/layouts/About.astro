---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"blog">["data"];

const {description, heroImage } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={"About"} description={description} />
        <style>
            main {
                width: calc(100% - 2em);
                max-width: 100%;
                margin: 0;
            }
            .hero-image {
                width: 100%;
            }
            .hero-image img {
                display: block;
                height: 450px;
                margin: 0 auto;
                border-radius: 12px;
                box-shadow: var(--box-shadow);
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="hero-image">
                            <img
                                width={1020}
                                height={510}
                                src={heroImage}
                                alt=""
                            />
                </div>
                <h1>About</h1>
                    <slot />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>
